@model IEnumerable<DataAccessLayer.Models.User>


<div class="d-flex flex-row justify-content-between align-items-center">
    <div>
        <h3 class="card-header fw-bold my-1">Student List</h3>
        <h4><a asp-controller="Dashboards" asp-action="Student">Dashboard</a> / Students / All Students</h4>
    </div>
    <a asp-controller="" asp-action="" class="btn btn-primary me-2">Add Student</a>
</div>

<div class="card">
    <h4 class="card-header">Students List</h4>
    <div class="table-responsive text-nowrap p-4">
        <table id="dataTable" class="table" style="width:100%">
            <thead class="table-light thead-light">
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Email</th>
                    <th>Phone Number</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PhoneNumber)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Active)
                        </td>
                        <td>
@*                             <a asp-controller="UserManagement" asp-action="Details" asp-route-id="@item.Id">Edit</a>
 *@                            <div class="dropdown">
                                <button class="btn p-0 d-flex align-items-center" type="button" id="cardOpt3" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                    <a class="dropdown-item" href="javascript:void(0);">View Student</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Promote Student</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
