@model IEnumerable<DataAccessLayer.Models.User>

@section VendorScripts {
    <script src="~/vendor/libs/masonry/masonry.js"></script>
}

@* ************** Content ************** *@
<h4 class="py-3 mb-4">
    <span class="text-muted fw-light">
        Dashboard / Peoples / Students Grid
    </span>
</h4>

<div class="card my-4">
    <div class="card-body">
        <h3>Students</h3>
    </div>
</div>

<!-- Student -->
<div class="row mb-5">
    @foreach (var student in Model)
    {
        <div class="col-md-4 col-lg-3 mb-3">
            <div class="card">
                <div class="card-header py-3">
                 
                    <div class="d-flex justify-content-between align-items-center">
                        <p class="mb-0">@student.Student.Id@student.Student.AdmissionDate.ToString("yyyy-MM-dd")</p>
                        <div class="d-flex gap-1 align-items-center">
                            <p class="mb-0">Active</p>
                            <div class="dropdown">
                                <button class="btn p-0 d-flex align-items-center" type="button" id="cardOpt3" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="cardOpt3">
                                    <a class="dropdown-item" href="javascript:void(0);">View Student</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Promote Student</a>
                                    <a class="dropdown-item" href="javascript:void(0);">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr class="my-2" />
                <div class="card-body py-3">
                    <div class="d-flex bg-secondary p-2 rounded">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar avatar-online">
                                <img src="~/img/avatars/1.png" alt="" class="w-px-40 h-auto rounded-circle">
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <span class="fw-medium d-block text-black">@student.FirstName</span>
                            <small class="text-muted">@student.LastName</small>
                        </div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <div>
                            <h6 class="my-1">Roll No</h6>
@*                             <p class="my-1">@student.RollNumber</p>
 *@                        </div>
                        <div>
                            <h6 class="my-1">Gender</h6>
                            <p class="my-1">@student.Gender</p>
                        </div>
                        <div>
                            <h6 class="my-1">Admission Date</h6>
                            <p class="my-1">@student.Student.AdmissionDate.ToString("yyyy-MM-dd")</p>
                        </div>
                    </div>
                </div>
                <hr class="my-2" />
                <div class="card-footer py-2">
                    <div class="avatar rounded">
                        <img src="~/img/icons/unicons/chart-success.png" alt="chart success" class="rounded-circle">
                    </div>
                </div>
            </div>
        </div>
    }
</div>
